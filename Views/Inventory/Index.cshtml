    <script>
        try {
            var heatMapData = {
                max: 8,
                data: []
            };

            heatMapData.data.push({ lat: parseFloat(-29), lng: parseFloat(24), count: 2 });

            var baseLayer = L.tileLayer('https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=0I6f3JCVL7PRhmvKYxRb', { attribution: '<a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>', });

            var cfg = {
                "radius": 2,
                "maxOpacity": .8,
                "scaleRadius": true,
                "useLocalExtrema": true,
                latField: 'lat',
                lngField: 'lng',
                valueField: 'count'
            };

            var heatmapLayer = new HeatmapOverlay(cfg);

            var networkGeoLocationHeatmap = new L.map('networkGeoLocationHeatmap', {
                center: new L.LatLng(-29, 24),
                zoom: 5,
                layers: [baseLayer, heatmapLayer]
            });

            heatmapLayer.setData(heatMapData);
        } catch (err) {

        }
        
    </script>
