                //-------------
                //- BAR CHART -
                //-------------
                var barChartCanvas = $('#barChart').get(0).getContext('2d')
                var barChartData = jQuery.extend(true, {}, areaChartData)
                var temp0 = areaChartData.datasets[0]
                var temp1 = areaChartData.datasets[1]
                barChartData.datasets[0] = temp1
                barChartData.datasets[1] = temp0

                var barChartOptions = {
                    responsive: true,
                    maintainAspectRatio: false,
                    datasetFill: false
                }

                var barChart = new Chart(barChartCanvas, {
                    type: 'bar',
                    data: barChartData,
                    options: barChartOptions
                })

            });
            var donutData;
            $.ajax({
                url: '/api/Inventory/Home',
                method: 'GET',
                dataType: 'json'
            }).done(function (data) {
                if (data.Success) {
                    console.log(data);
                    $("#customer-count").text(data.Customers);
                    $("#stock-available-count").text(data.StockAvailable);
                    $("#stock-sold-count").text(data.StockSold);
                    $("#orders-processed").text(data.OrdersProcessed);
                    $("#orders-packaged").text(data.OrdersPackaged);
                    $("#orders-intransit").text(data.OrdersInTransit);
                    $("#orders-delivered").text(data.OrdersDelivered);
                    $("#stock-sold-value").text(new Intl.NumberFormat('en-ZA', { style: 'currency', currency: 'ZAR' }).format(data.RandValueSold));

                    donutData = {
                        labels: [
                            'Products Available', 
                            'Products Sold',
                        ],
                        datasets: [
                            {
                                data: [data.StockAvailable,data.StockSold],
                                backgroundColor : ['#17a2b8', '#28a745'],
                            }
                        ]
                    }

                     //-------------
                     //- PIE CHART -
                     //-------------
                     // Get context with jQuery - using jQuery's .get() method.
                     var pieChartCanvas = $('#pieChart').get(0).getContext('2d')
                     var pieData        = donutData;
                     var pieOptions     = {
                       maintainAspectRatio : false,
                       responsive : true,
                     }
                     //Create pie or douhnut chart
                     // You can switch between pie and douhnut using the method below.
                     var pieChart = new Chart(pieChartCanvas, {
                       type: 'pie',
                       data: pieData,
                       options: pieOptions      
                     })

                } else {
                    console.log(data);
                    toastr.error('An error occured while trying to save user, contact administrator!');
                }

            });

     

        }
