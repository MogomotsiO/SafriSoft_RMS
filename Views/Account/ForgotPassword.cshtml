@model SafriSoftv1._3.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SafriSoft | Rental</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link href="~/creativetim/css/Rental/material-dashboard.css?v=2.1.2" rel="stylesheet" />
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!-- Safri Custom Styles -->
    <link href="~/Content/Site.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="../../assets/css/style.css" rel="stylesheet">
</head>
<body id="hero" class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body justify-content-center">
                <div class="login-logo"><a href="~/Home/Index"><img src="../../assets/img/iconName.png" alt="" class="logo-login" style="height:100px; width:100px;"></a></div>
                @*<p class="login-box-msg">Safri Inventory</p>*@
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.DisplayFor(m => m.ResultMessage, new { @class = "text-info" })
                    <div class="mb-3 mt-3">
                        <div class="input-group form-group bmd-form-group">
                            <label class="bmd-label-floating">Enter Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            <div class="input-group-append">
                                <div class="input-group-text  bg-white border-white">
                                    <span><i class="fas fa-envelope text-success"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12">
                            <button type="submit" class="btn btn-light btn-block"><i class="fas fa-envelope text-success"></i> Email Link</button>
                        </div>
                    </div>
                }
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
    <script src="~/creativetim/js/core/popper.min.js"></script>
    <script src="~/creativetim/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/creativetim/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/creativetim/js/material-dashboard.js"></script>

</body>
</html>

